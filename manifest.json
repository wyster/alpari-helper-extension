{
  "name": "__MSG_appName__",
  "description": "__MSG_appDescription__",
  "short_name": "__MSG_appShortName__",
  "manifest_version": 2,
  "version": "1.1.0",
  "default_locale": "ru",
  "content_scripts": [
    {
      "js": [
        "dist/content/main.js"
      ],
      "matches": [
        "*://my.alpari.com/*/investments/pamm_accounts/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "dist/background.js"
    ]
  },
  "web_accessible_resources": [
    "dist/*",
    "pages/*"
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "devtools_page": "pages/devtools-background.html"
}
