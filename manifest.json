{
  "manifest_version": 2,
  "name": "AlpariHelperExtension",
  "version": "0.0.1",
  "content_scripts": [
    {
      "js": [
        "dist/content/main.js"
      ],
      "matches": [
        "*://my.alpari.com/*/investments/pamm_accounts/*",
        "*://localhost:*/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "persistent": false,
    "scripts": ["dist/background.js"]
  },
  "web_accessible_resources": [
    "dist/*"
  ],
  "permissions": [
    "storage",
    "tabs"
  ]
}
